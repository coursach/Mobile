<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPM_PROJECT.MainPage">
    <ContentPage.ToolbarItems >
        <ToolbarItem x:Name="profile" IconImageSource="" Text="Войти" Clicked="Profile"/>
        <ToolbarItem Text="Страница Фильмов" Clicked="Movies"/>
        <ToolbarItem Text="Страница Сериалов" Clicked="Serials"/>
        <ToolbarItem Text="Страница Аниме" Clicked="Anime"/>
        <ToolbarItem Text="Моё" Clicked="My"/>
        <ToolbarItem Text="Подписка" Clicked="Sub"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Black"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="8"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="#7F7F7F"/>
        </Style>
    </ContentPage.Resources>
    <StackLayout BackgroundColor="Black">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>
            <Button ImageSource="burg.png" FontSize="10" Text="KINOHUB" Grid.Column="0"/>
            <SearchBar PlaceholderColor="AliceBlue" Grid.Column="1"/>
            <Button x:Name="ava" FontSize="13" Text="Войти" Grid.Column="3" ImageSource=""/>
        </Grid>
        <ScrollView>
            <StackLayout>
                <StackLayout Padding="10">
                    <Image Source="banner.png"/>
                </StackLayout>
                <StackLayout Padding="10">
                    <Label TextColor="White" FontSize="20">Фильмы</Label>
                    <ScrollView Orientation="Horizontal">
                        <StackLayout Orientation="Horizontal">
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
                <StackLayout Padding="10">
                    <Label TextColor="White" FontSize="20">Фильмы</Label>
                    <ScrollView Orientation="Horizontal">
                        <StackLayout Orientation="Horizontal">
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
                <StackLayout Padding="10">
                    <Label TextColor="White" FontSize="20">Фильмы</Label>
                    <ScrollView Orientation="Horizontal">
                        <StackLayout Orientation="Horizontal">
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                            <Image Source="i_drive.png" HeightRequest="100"/>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>

                <StackLayout VerticalOptions="EndAndExpand">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
                        <Image Source="vk.png"/>
                        <Image Source="tg.png"/>
                        <Image Source="chviter.png"/>
                    </StackLayout>
                    <Label HorizontalOptions="Center">Мы всегда готовы вам помочь</Label>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </StackLayout>

</ContentPage>
