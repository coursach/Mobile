<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPM_PROJECT.EnterPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#000000" >
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10, 150, 10, 10" Spacing="30">
                <StackLayout BackgroundColor="#1392DC" HeightRequest="50">
                    <Button BackgroundColor="#000000" TextColor="#5F7C8D" 
                    Text="Вход" />
                </StackLayout>
                <Button BackgroundColor="#000000" TextColor="#5F7C8D" Text="Регистрация" Clicked="Button_Clicked_2"/>
            </StackLayout>
            <Entry TextColor="#5F7C8D" Placeholder="Введите email" Margin="20" MaxLength="50" PlaceholderColor="#5F7C8D"
           x:Name="email"/>
            <Entry TextColor="#5F7C8D" Placeholder="Введите пароль" Margin="20" MaxLength="50" PlaceholderColor="#5F7C8D" 
           x:Name="Password" IsPassword="True"/>
            <Button BackgroundColor="#4B687A" Text="Войти" TextColor="White" Margin="20" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>