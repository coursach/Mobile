<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPM_PROJECT.PersonalAccountPage">
    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#000000"/>
            <Setter Property="TextColor" Value="#555555"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView Background="#000000">
        <StackLayout Margin="20" Spacing="10">
            <Label Text="Данные аккаунта" TextColor="White" FontSize="25"/>
            
            <Image Source="ava.png" HeightRequest="250" WidthRequest="250" BackgroundColor="#000000"/>

            <Label Text="Основная почта"/>
            <Entry Placeholder="Ваш email" />
            
            <Label  Text="Пароль"/>
            <Entry Placeholder="Пароль"/>
            
            <Label  Text="Имя"/>
            <Entry Placeholder="Имя"/>
            
            <Label  Text="Фамилия"/>
            <Entry Placeholder="Фамилия"/>
            
            <Button Text="Сохранить" BackgroundColor="#1263DE" TextColor="White"/>
            
        </StackLayout>
    </ScrollView>
</ContentPage>