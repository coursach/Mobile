<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPM_PROJECT.ActivatePage"
             >
    <StackLayout BackgroundColor="#000000">
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="20" Spacing="20">
            <Label TextColor="White" FontSize="16" HorizontalTextAlignment="Center">Получите подписку на фильмы,сериалы и аниме</Label>
            <StackLayout Orientation="Horizontal">
                <Entry BackgroundColor="#7F7F7F" Placeholder="Введите промокод" MaxLength="30" WidthRequest="170" TextColor="White" x:Name="entry"/>
                <Button Text="Получить подписку" BackgroundColor="#7F7F7F" TextColor="White" Clicked="Button_Clicked"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>